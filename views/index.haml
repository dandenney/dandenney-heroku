    %section.slide
      %h2 Attributes
      %ul
        %li.slide Attributes are added via Ruby hashes
        %li.slide.trigger
      %pre.initial
        :preserve
          %a<mark class="mark-1">{href: 'http://haml-lang.org', title: 'A Link'}</mark> A Link
      
    %section.slide
      %h2 IDs &amp; Classes
      %ul
        %li.slide Classes and IDs may also be added via hash
        %li.slide More commonly, though, they're added with a convenient, CSS selector-like shorthand
        %li.slide.trigger
      %pre.initial
        :preserve
          %h2<mark class="mark-1">{id: 'id', class: 'class'}</mark> This line is the same
          %h2<mark class="mark-2">#id.class</mark> As this line
      
    %section.slide
      %h2 Multiple Classes
      %pre.initial
        :preserve
          %div.class-1.class-2 More than one!
      
