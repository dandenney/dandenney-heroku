    %section.slide
      %h1 The Good
      
    %section.slide
      %h2 So, Haml's Kinda Awesome
      %ul
        %li Reduces repetition
        %li Reduces effort
        %li Code that tends to be easier to scan and maintain
        
    %section.slide
      %h2 Universal Selectors
      %pre
        :preserve
          .class
      %pre
        :preserve
          .class {
            width: 200px;
          }
      %pre
        :preserve
          $('.class').fadeIn();
          
    %section.slide
      %h2 Uniformity
      %pre
        :escaped
          <div>
            <h1>A Title</h1>
            <form>
            <p>
            <label>A Label</label>
            <input type="text" id="input" />
            </p>
          </form>
          </div>
          
