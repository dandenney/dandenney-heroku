      div.border-jeweled {
      border-image: url('/images/posts/front-end-dev/border-image-bits/border-modal.png') 48 22 46 31 repeat;
      border-style: solid;
      border-width: 48px 22px 46px 31px;
      color: #999;
      padding: 1em;
      position: relative;
      }
      div.border-jeweled:after {
      background: #000;
      content: "";
      bottom: -28px;
      left: -14px;
      position: absolute;
      right: -4px;
      top: -31px;
      z-index: 0;
      }
      div.border-jeweled pre {
      position: relative;
      z-index: 1;
      }
